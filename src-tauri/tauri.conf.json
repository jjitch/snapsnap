{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "snapsnap",
  "version": "0.1.0",
  "identifier": "com.snapsnap.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "snapsnap",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "msi",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhBRUE2N0ZEMjZCNUY1RkQKUldUOTliVW0vV2ZxaWswV1RSeUJqQkI2eXhnRC9mU29HcGRiYUxoMUs3SHpVMkhidzAxSTl1SGoK",
      "endpoints": [
        "https://github.com/jjitch/snapsnap/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
